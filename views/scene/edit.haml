-# coding: UTF-8
!!!
%html
  %head
    %title 场景大师
    %link{href: '/assets/css/bootstrap.css', rel: 'stylesheet', type: 'text/css', media: 'screen'}
    %link{href: '/assets/css/bootstrap-responsive.css', rel: 'stylesheet', type: 'text/css', media: 'screen'}
    %link{href: '/assets/css/front.css', rel: 'stylesheet', type: 'text/css', media: 'screen'}
    %script{type: 'text/javascript', src: '/assets/js/jquery-2.0.2.min.js'}
    %script{type: 'text/javascript', src: '/assets/js/bootstrap.min.js'}  
    %script{type: 'text/javascript', src: '/assets/js/scene.js'}
  
  %body{'data-offset' => 50}
    %div.navbar.navbar-fixed-top
      %div.navbar-inner
        %div.container
          %h2 场景大师
          %ul.nav.pull-right
            - if session[:user_email].nil?
              %li.first
                %a{href: Session::SignForm.path} 注册
              %li.last
                %a{href: ''} 登录
            - else
              %ul.nav.pull-right
                %li.dropdown#user_menu
                  %a.dropdown-toggle{'data-toggle' => 'dropdown', 'href' => '#user_menu'}
                    = session[:user_email].split('@')[0] 
                    %b.caret
                  %ul.dropdown-menu
                    %li.last
                      %a{href: Session::Logout.path} 退出

  
    %div.container
      %div#main.container-fluid
        %a.btn.btn-success.btn-large.pull-right{href: Scene::Show.path(@scene[:id])} 完成编辑
        %center
          %h4= @scene[:name]
        %input#scene_id.data{type: 'hidden', value: @scene[:id]}
        %ul.unstyled
          - @activities.each do |activity|
            %li.activity
              %input.data{type: 'hidden', value: activity[:id]}
              %span.label.label-inverse.role= activity[:role]
              %span.label.action= activity[:action]
              %span.label.label-info.content= activity[:content]
              %span.crud
                %a.icon-plus.add
                %a.icon-wrench.wrench
                %a.icon-trash.trash
              
    
  